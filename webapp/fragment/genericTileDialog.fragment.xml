<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:generic="sap.m">
    <Dialog  title="Select" contentWidth="700px" contentHeight="400px">
       <VBox>
        <HBox justifyContent="Start" wrap="Wrap" class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop sapUiSmallMarginBottom">
            

            <GenericTile header="CREDIT NOTE" frameType="OneByHalf" press="onCloseDialog" class="customTile sapUiSmallMarginEnd" >
							
						</GenericTile>
						<GenericTile header="CREDIT NOTE DRAFT" frameType="OneByHalf" press="onCloseDialog" class="customTile" >
							
						</GenericTile>
        </HBox>
        </VBox>
        <VBox >
         <Input id="retReundAmount" width="60%" visible="false" placeholder="Enter the Refund Amount" class="sapUiSmallMarginBegin sapUiMediumMarginEnd customInputHeight inputStyle sapUiSmallMarginTop sapUiSmallMarginBottom" />
         <Button id="retRefundSbmtBtn" visible="false" text="Submit" press="onPressRefundAmount" class="cstmBtn sapUiSmallMarginBeginEnd"/>
        </VBox>
       <endButton>
            <Button text="Cancel" press="onReturnCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
