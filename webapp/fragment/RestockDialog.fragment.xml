<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="restockDialog" title="Enter Restocking Percentage">
        <VBox class="sapUiSmallMargin">
            <Text text="Material: {dialog>/selectedItem/Material}" class="sapUiTinyMarginBottom" />
            <Text text="Description: {dialog>/selectedItem/Description}"  class="sapUiTinyMarginBottom" />
            <Text text="Unit Price: {dialog>/selectedItem/UnitPrice}"  class="sapUiTinyMarginBottom"/>
            <Text text="Unit Discount: {dialog>/selectedItem/returnUnitDiscount}" class="sapUiTinyMarginBottom" />
            <Input id="idRestockPercent" placeholder="Enter Restocking Fee Percentage%" type="Number" class="sapUiTinyMarginBottom"
                   value="{dialog>/selectedItem/restockPercent}" />
        </VBox>
        <beginButton>
            <Button text="OK" press=".onRestockOk"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onRestockCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
